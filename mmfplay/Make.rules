# $Id: Make.rules,v 1.14 2004/07/01 10:58:32 cmatsuoka Exp $

CC	= gcc
CFLAGS	= -g -O0 -Wall -DINLINE=inline $(XCFLAGS) $(AUTO_CFLAGS)
LD	= gcc
LDFLAGS	= -g $(AUTO_LDFLAGS)
RANLIB	= ranlib
SHELL	= /bin/sh
CONF	= $(TOPDIR)/Make.conf
MAKEFILE= Makefile


include $(CONF)

.c.o:
	$(CC) -c $(CFLAGS) -o $*.o $<

dummy:

distclean::
	rm -f $(DCFILES)

clean distclean::
	rm -f *.o *.obj errlist core depend $(CFILES)
ifdef DDIRS
	@for i in $(DDIRS); do \
		(cd $$i; [ -f Makefile ] && $(MAKE) $@) \
	done; true
endif

subdirs:
ifdef DDIRS
	@for i in $(DDIRS); do \
		(cd $$i; [ -f Makefile ] && $(MAKE) all) \
	done; true
endif

$(BIN): $(OBJS)
	$(LD) $(LDFLAGS) -o$@ $+ $(LIBS) $(AUTO_LIBS)

$(OBJS): $(MAKEFILE) $(CONF)

$(LIB): $(LIB)($(OBJS))
	$(RANLIB) $(LIB)

$(LIB): $(OBJS)

subdist:
	cp -dp $(DFILES) $(XDFILES) $(DISTDIR)
ifdef DDIRS
	for i in $(DDIRS) $(XDDIRS); do \
		mkdir $(DISTDIR)/$$i; \
		( cd $$i; \
		if [ -f $(MAKEFILE) ]; then \
			$(MAKE) VERSION=$(VERSION) DISTDIR=../$(DISTDIR)/$$i \
			subdist; \
		else \
			for j in *; do \
				[ -f $$j ] && cp -dp $$j ../$(DISTDIR)/$$i; \
			done; \
		fi; ) \
	done
endif

depend: $(MAKEFILE)
	@echo Building dependencies...
	@$(CC) $(CFLAGS) -M $(OBJS:.o=.c) $(XDEPS) >$@

# Poor man's autoconf
$(CONF):
	@rm -f $@
	$(TOPDIR)/genconf.sh > $@
	
include $(TOPDIR)/Version

ifdef OBJS
include depend
endif

