# $Id: Make.rules,v 1.9 2004/06/30 14:09:34 cmatsuoka Exp $

CC	= gcc
CFLAGS	= -g -O0 -Wall
LD	= gcc
LDFLAGS	= -g
RANLIB	= ranlib
SHELL	= /bin/sh
CONF	= $(TOPDIR)/Make.conf
MAKEFILE= Makefile


include $(CONF)

.c.o:
	$(CC) -c $(CFLAGS) $(XCFLAGS) $(XXCFLAGS) -o $*.o $<

dummy:

distclean::
	rm -f $(DCFILES)

clean distclean::
	rm -f *.o *.obj errlist core depend $(CFILES)
ifdef DDIRS
	@for i in $(DDIRS); do \
		(cd $$i; [ -f Makefile ] && $(MAKE) $@) \
	done; true
endif

subdirs:
ifdef DDIRS
	@for i in $(DDIRS); do \
		(cd $$i; [ -f Makefile ] && $(MAKE) all) \
	done; true
endif

$(OBJS): $(MAKEFILE) $(CONF)

$(LIB): $(LIB)($(OBJS))
	$(RANLIB) $(LIB)

$(LIB): $(OBJS)

subdist:
	cp -dp $(DFILES) $(XDFILES) $(DISTDIR)
ifdef DDIRS
	for i in $(DDIRS) $(XDDIRS); do \
		mkdir $(DISTDIR)/$$i; \
		( cd $$i; \
		if [ -f $(MAKEFILE) ]; then \
			$(MAKE) VERSION=$(VERSION) DISTDIR=../$(DISTDIR)/$$i \
			subdist; \
		else \
			for j in *; do \
				[ -f $$j ] && cp -dp $$j ../$(DISTDIR)/$$i; \
			done; \
		fi; ) \
	done
endif

depend: $(MAKEFILE)
	@echo Building dependencies...
	@$(CC) $(CFLAGS) $(XCFLAGS) $(XXCFLAGS) -M $(OBJS:.o=.c) $(XDEPS) >$@

# Poor man's autoconf
$(CONF):
	@rm -f $@
	@case `uname -s` in				\
	*Linux)						\
		SOUND=oss;				\
		FLAGS="-DHAS_GETOPT_LONG";;		\
	SunOS)						\
		SOUND=solaris;;				\
	FreeBSD)					\
		SOUND=freebsd;				\
		FLAGS="-DHAS_GETOPT_LONG";;		\
	NetBSD|OpenBSD)					\
		SOUND=bsd;				\
		FLAGS="-DHAS_GETOPT_LONG";;		\
	*)						\
		SOUND=`uname -s|tr A-Z a-z`;;		\
	esac;						\
	echo "SOUND_DRIVER=$$SOUND">>$@;		\
	echo "XXCFLAGS=$$FLAGS">>$@;			\
	echo "USERNAME=`whoami`@`hostname`">>$@
	
include $(TOPDIR)/Version

ifdef OBJS
include depend
endif

